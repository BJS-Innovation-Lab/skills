// Single-agent config for client deployment
// Copy to ~/.openclaw/openclaw.json and customize
{
  // One agent handles everything
  "agents": {
    "list": [
      {
        "id": "main",
        "default": true,
        "name": "Assistant",
        "workspace": "~/.openclaw/workspace",
        "model": "anthropic/claude-sonnet-4-5",
        "identity": {
          "name": "[COMPANY_NAME] Assistant",
          "emoji": "ðŸ¤–"
        }
      }
    ]
  },

  // Telegram config
  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "YOUR_BOT_TOKEN",
      "dmPolicy": "allowlist",
      "allowFrom": ["OWNER_TELEGRAM_ID"]
    }
  },

  // Heartbeat for proactive checks
  "heartbeat": {
    "enabled": true,
    "intervalMinutes": 30
  }
}
