{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "description": "Unified event schema for the learning system",
  "type": "object",
  "required": ["id", "timestamp", "type"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^evt_[a-z]+_[0-9]+_[a-z0-9]+$",
      "description": "Unique event identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "type": {
      "type": "string",
      "enum": ["decision", "error", "learning", "pattern", "procedure", "goal", "evolution", "session", "command", "agent"],
      "description": "Event type"
    },
    "action": {
      "type": ["string", "null"],
      "description": "Specific action within type"
    },
    "source": {
      "type": "string",
      "enum": ["session", "heartbeat", "hook", "trigger", "manual"],
      "default": "session"
    },
    "session_key": {
      "type": ["string", "null"],
      "description": "Session identifier if applicable"
    },
    "context": {
      "type": "object",
      "description": "Contextual information",
      "properties": {
        "task": { "type": "string" },
        "user_request": { "type": "string" },
        "prior_events": { 
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "data": {
      "type": "object",
      "description": "Type-specific event data"
    },
    "outcome": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["pending", "success", "failure", "partial", "logged"]
        },
        "result": { "type": ["string", "object", "null"] },
        "feedback": { "type": ["string", "null"] }
      }
    },
    "linked_events": {
      "type": "object",
      "properties": {
        "caused_by": { "type": ["string", "null"] },
        "led_to": {
          "type": "array",
          "items": { "type": "string" }
        },
        "related": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
