{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Procedure",
  "description": "Reusable action sequence",
  "type": "object",
  "required": ["id", "name", "steps"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^proc_[a-z0-9_]+$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": ["string", "null"]
    },
    "trigger": {
      "type": "object",
      "properties": {
        "patterns": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Text patterns that trigger this procedure"
        },
        "context": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Context keywords"
        }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "params": { "type": "object" },
          "branch": { "type": "object" }
        },
        "required": ["action"]
      }
    },
    "source_episodes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "occurrences": { "type": "integer" },
        "executions": { "type": "integer" },
        "successes": { "type": "integer" },
        "success_rate": { "type": ["number", "null"] },
        "last_used": { "type": "string", "format": "date-time" }
      }
    },
    "status": {
      "type": "string",
      "enum": ["candidate", "active", "deprecated"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
